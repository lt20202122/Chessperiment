
{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"lib": ["ES2020"],
		"rootDir": "./",
		"outDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": false,
		"types": ["node"]
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist"]
}

